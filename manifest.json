{
  "manifest_version": 3,
  "name": "AI Page Assistant",
  "version": "1.0",
  "description": "Analyze pages using OpenAI",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_popup": "popup/popup.html"
  },  
  "background": {
    "service_worker": "background.js"
  }
}